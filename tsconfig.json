{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noEmit": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "@intlify/unplugin-vue-i18n/messages"
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "./src/types/"
    ],
    "paths": {
      "@/*": ["src/*", "dist/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test"
  ],
  "references": [{ "path": "tsconfig.node.json"}]
}
